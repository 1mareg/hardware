<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/col1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/margin_right_table_cell"
        android:layout_weight="3"
        android:gravity="right"
        android:text="101014"
        android:textColor="@color/text_color_block_p"
        android:textSize="@dimen/text_size_table" />

    <TextView
        android:id="@+id/col2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/margin_right_table_cell"
        android:layout_weight="20"
        android:text="Конвейер ленточный №4 59747 (отсев ≥12мм) EP 400, B-500, L=19,6 м"
        android:textColor="@color/text_color_block_p"
        android:textSize="@dimen/text_size_table" />

    <TextView
        android:id="@+id/col3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/margin_right_table_cell"
        android:layout_weight="7"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="5dp"
        android:text="В эксплуатации"
        android:textColor="@color/text_color_for_colored_background"
        android:textSize="@dimen/text_size_table" />

    <TextView
        android:id="@+id/col4"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="5dp"
        android:text="Очень критично"
        android:textColor="@color/text_color_for_colored_background"
        android:textSize="@dimen/text_size_table" />
</LinearLayout>

